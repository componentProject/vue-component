{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "src/constants/*",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "plugins/**/*",
    "src/utils/**/*",
    "env.d.ts"
  ],
  "exclude": [],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
