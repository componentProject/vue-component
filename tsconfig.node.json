{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    ".storybook/*",
    "./vite.config.*",
    "/src/utils/getEnv.ts",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "./plugins/addScopedAndReplacePrefix.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
